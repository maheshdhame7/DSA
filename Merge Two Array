#include<stdio.h>
main()
{
	int i,j,n,m,o,index=0;
	printf("\n Enter how many element do u want for first Array :");
	scanf("%d",&n);
	int arr[n];
	printf("\n Enter how many element do u want for Second Array :");
	scanf("%d",&m);
	int arr1[m];
	o=n+m;
	int arr2[o];
	printf("\n Enter the %d element of array1 :",n);
	for(int i=0;i<n;i++)
	{
		scanf("%d",&arr[i]);
		arr2[index]=arr[i];
		index++;
	}
	printf("\n Array1 :");
	for(int i=0;i<n;i++)
	{
		printf("%3d",arr[i]);
	}
	printf("\n Enter the %d element of array2 :",m);
	for(int i=0;i<m;i++)
	{
		scanf("%d",&arr1[i]);
		arr2[index]=arr1[i];
		index++;
	}
	printf("\n Array1 :");
	for(int i=0;i<m;i++)
	{
		printf("%3d",arr1[i]);
	}
	printf("\n Merging of two Arrays :");
	for(int i=0;i<o;i++)
	{
		printf("%3d",arr2[i]);
	}
}
